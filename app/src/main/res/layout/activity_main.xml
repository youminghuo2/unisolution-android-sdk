<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dataStore_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dataStore存储" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dataStore_read_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dataStore存储" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginStart="10dp"
                android:id="@+id/dataStore_tv"
                android:text="默认值是:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/singleDialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全局单例dialog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/permission_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一次性申请蓝牙，相机，地理位置" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/permission_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请单个权限，相机" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/camera_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="跳转系统相册" />


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginStart="10dp"
                android:id="@+id/picture_img"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>